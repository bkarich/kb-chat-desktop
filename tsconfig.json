{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "typeRoots": ["src/@types"],
    "lib": [
      "es2019",
      "dom"
    ],
    "types": ["jest", "node"],
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
